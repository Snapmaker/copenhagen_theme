{{#if promoted_articles}}
    <section class="home-section home-section-default">
        <div class="container home-promoted-articles">
            <h2>{{t 'promoted_articles'}}</h2>
            <ul class="article-list">
                {{#each promoted_articles}}
                    <li class="article-list-item">
                        <div class="article-item">
                            <a href="{{url}}">
                                {{title}}
                                {{#if internal}}
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" focusable="false" viewBox="0 0 16 16" class="icon-lock" title="{{t 'internal'}}">
                                        <rect width="12" height="9" x="2" y="7" fill="currentColor" rx="1" ry="1" />
                                        <path fill="none" stroke="currentColor" d="M4.5 7.5V4a3.5 3.5 0 017 0v3.5" />
                                    </svg>
                                {{/if}}
                            </a>
                        </div>
                    </li>
                {{/each}}
            </ul>
        </div>
    </section>
{{/if}}

<section class="home-section home-section-grey">
    <div class="container home-need-help">
        <h2 class="home-need-help-title">{{dc 'home_need_help'}}</h2>
        <p class="home-need-help-desc">{{dc 'home_need_help_desc'}}</p>
        <div class="home-need-help-buttons">
            <a class="button button-primary" href="javascript:void(0)" onclick="zE(function() { zE.activate() });">
                {{t 'submit_a_request' }}
            </a>
            {{!
            <a id="home-need-help-weixin-button" class="button button-secondary" href="https://forum.snapmaker.com" target="_blank">
                Visit to the forum
            </a>
            }}
            {{dc 'home_need_help_button2'}}
            <div id="home-weixin-qrcode">
                <div class="home-need-help-modal">
                    <img src="{{asset 'pic_weixin_qrcode_120x120.png'}}" alt="" />
                </div>
            </div>
        </div>
    </div>
</section>
